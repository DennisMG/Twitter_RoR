%center 
  = form_for(@user) do |f|
    .field
      = f.label :name
      %br
        = f.text_field :name
    .field
      = f.label :email
      %br
        = f.text_field :email
    .field
      = f.label :Password
      %br
        = f.password_field :password
        %br
          = f.label :"Pasword Confirmation"
          %br
            = f.password_field  :password_confirmation
    .actions
      = f.submit
