%center
	%p#notice= notice
	%p
		%strong Name:
		= @user.name
	%p
		%strong Email:
		= @user.email
	%p
		%strong Password:
		= @user.password

	%p
		%strong Gender:
		= @user.gender	

	= render partial: "tweets", locals: { tweets: @user.tweets }

	= new_tweet_link

	= link_to 'Edit User', edit_user_path(@user)

	= link_to 'Update Tweets', updatetweets_user_path
	
	= link_to 'Back', users_path


	

